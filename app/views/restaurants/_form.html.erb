<%= simple_form_for restaurant do |f| %>
<%= f.input :name, label: "Restaurant name", error: 'Restaurant is mandatory, please specify one' %>
<%= f.input :address, hint: 'No special characters.' %>
<%= f.input :phone_number %>
<%= f.input :category, collection: Restaurant::CATEGORIES %>
<%= f.input :url, hint: 'url on visual hunt' %>

<button type="button" class="btn btn-primary"><%= f.button :submit %></button>
<% end %>
