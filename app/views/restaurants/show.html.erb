<div class="container">
  <div class="card">
    <img src="<%= @restaurant.url %>" class="card-img-top" alt="restaurant">
    <div class="card-body">
      <h5 class="card-title"><%= @restaurant.name %></h5>
      <p class="card-text">Adresse: <%= @restaurant.address %></p>
      <p class="card-text">Phone number: <%= @restaurant.phone_number %></p>
      <% if @reviews.empty? %>
      <p>No review</p>
      <% else %>
      <p class="card-text">Rating: <%=@reviews[0].rating%></p>
      <p class="card-text">Content: <%=@reviews[0].content%></p>
      <% end %>
      <p class="card-text"><small class="text-muted"><%= @restaurant.category %></small></p>
    </div>
  </div>

  <div class="row">
    <p><%= link_to "Back to list", restaurants_path %></p>
  </div>

  <div class="row">
    <p><%= link_to "+ Add a review", new_restaurant_review_path(@restaurant) %></p>
  </div>
</div>
